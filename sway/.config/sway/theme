# --- Fonts ---
font pango:JetBrainsMono Nerd Font 11

# --- Gaps & Borders ---
gaps inner 5
gaps outer 4
default_border pixel 2
default_floating_border pixel 2

# --- Window Rules ---
# Make the specific terminal float as requested
for_window [app_id="myfloatingterm"] floating enable, resize set 700 570

# Ensure other common dialogs float
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="preferences"] floating enable
for_window [app_id="pavucontrol"] floating enable

# --- Colors ---
# Class                 Border  Bground Text    Indicator ChildBorder
set $bg-color            #282828
set $inactive-bg-color   #282828
set $text-color          #ebdbb2
set $inactive-text-color #928374
set $urgent-bg-color     #cc241d
set $focused-color       #d79921 

# Apply Colors
client.focused          $focused-color     $focused-color     $bg-color         $focused-color   $focused-color
client.focused_inactive $inactive-bg-color $inactive-bg-color $text-color       $inactive-bg-color $inactive-bg-color
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color $inactive-bg-color $inactive-bg-color
client.urgent           $urgent-bg-color   $urgent-bg-color   $text-color       $urgent-bg-color $urgent-bg-color